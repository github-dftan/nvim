{
  "Main function": {
    "prefix": "main",
    "body": [
      "#include <stdio.h>",
      "",
      "int main(int argc, char *argv[]) {",
      "    $1",
      "    return 0;",
      "}"
    ],
    "description": "C language main function template"
  },
  "Printf": {
    "prefix": "printf",
    "body": [
      "printf(\"$1\\n\"$2);"
    ],
    "description": "Print formatted output"
  },
  "Scanf": {
    "prefix": "scanf",
    "body": [
      "scanf(\"$1\", &$2);"
    ],
    "description": "Read formatted input"
  },
  "For loop": {
    "prefix": "for",
    "body": [
      "for (int ${1:i} = 0; $1 < ${2:n}; $1++) {",
      "    $0",
      "}"
    ],
    "description": "For loop"
  },
  "While loop": {
    "prefix": "while",
    "body": [
      "while (${1:condition}) {",
      "    $0",
      "}"
    ],
    "description": "While loop"
  },
  "If statement": {
    "prefix": "if",
    "body": [
      "if (${1:condition}) {",
      "    $0",
      "}"
    ],
    "description": "If statement"
  },
  "If-else statement": {
    "prefix": "ifel",
    "body": [
      "if (${1:condition}) {",
      "    $2",
      "} else {",
      "    $0",
      "}"
    ],
    "description": "If-else statement"
  },
  "Function definition": {
    "prefix": "fun",
    "body": [
      "${1:void} ${2:function_name}(${3:void}) {",
      "    $0",
      "}"
    ],
    "description": "Function definition"
  },
  "Struct definition": {
    "prefix": "struct",
    "body": [
      "typedef struct {",
      "    $0",
      "} ${1:StructName};"
    ],
    "description": "Struct definition"
  },
  "Include stdio": {
    "prefix": "incstdio",
    "body": [
      "#include <stdio.h>"
    ],
    "description": "Include stdio.h"
  },
  "Include stdlib": {
    "prefix": "incstdlib",
    "body": [
      "#include <stdlib.h>"
    ],
    "description": "Include stdlib.h"
  },
  "Include string": {
    "prefix": "incstring",
    "body": [
      "#include <string.h>"
    ],
    "description": "Include string.h"
  }
}
